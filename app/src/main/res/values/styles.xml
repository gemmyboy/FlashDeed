<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/BG_Primary</item>
        <item name="colorPrimaryDark">@color/BG_Secondary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/BG_Secondary</item>
    </style>

    <style name="LoadTheme" parent="Theme.AppCompat.NoActionBar"></style>

    <style name="ToolbarTheme">
        <item name="android:colorBackground">@color/BG_Primary</item>
        <item name="android:textColorPrimary">@color/Off_White</item>
        <item name="android:actionMenuTextColor">@color/Off_White</item>
    </style>
</resources>
